{
  "builders": [
    {
      "name": "brobuntu-vbox",
      "output_directory": "output-brobuntu-vbox-{{user `bro_treeish`}}",
      "shutdown_command": "sudo -S shutdown -P now",
      "source_path": "output-lubuntu-vbox/lubuntu.ovf",
      "ssh_password": "bro",
      "ssh_username": "bro",
      "ssh_wait_timeout": "30s",
      "type": "virtualbox-ovf",
      "vm_name": "brobuntu-{{user `bro_treeish`}}"
    },
    {
      "name": "brobuntu-vmware",
      "output_directory": "output-brobuntu-vmware-{{user `bro_treeish`}}",
      "shutdown_command": "sudo shutdown -P now",
      "source_path": "output-lubuntu-vmware/lubuntu.vmx",
      "ssh_password": "bro",
      "ssh_username": "bro",
      "ssh_wait_timeout": "30s",
      "type": "vmware-vmx",
      "vm_name": "brobuntu-{{user `bro_treeish`}}"
    }
  ],
  "post-processors": null,
  "provisioners": [
    {
      "execute_command": "echo 'bro' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/upgrade.sh"
      ],
      "type": "shell"
    },
    {
      "type": "file",
      "source": "src/bro.tgz",
      "destination": "/tmp/bro.tgz"
    },
    {
      "execute_command": "echo 'bro' | {{.Vars}} sudo -E -S bash '{{.Path}}' {{user `bro_treeish`}}",
      "scripts": [
        "scripts/bro_install.sh"
      ],
      "type": "shell"
    },
    {
      "execute_command": "echo 'bro' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/vm_cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "bro_treeish": "v2.2"
  }
}

